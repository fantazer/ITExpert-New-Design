header{
  //background-image: linear-gradient(90deg, rgb(52, 73, 94) 31%, rgb(52, 152, 219) 100%);
  background-image: url(../img/bg.jpg);
  .filter{
    width 100%
    background rgba(13, 17, 49, 0.54)
    padding 30px
  }
}

.topmenu{
    .logo{
        img{
            width 150px
        }
    }
    .flex{
        flex-basis 400px
    }
    li{
        list-style none
        width 20%
        box-sizing border-box
        text-align center
        position relative
        &:after{
            content ''
            height 10px
            width 1px
            background white
            position absolute
            right 0
            top 43%
        }
        &:last-child,&:first-child{
            &:after{
                content ''
                height 0px
            }
        }

        a{
            color white
            text-align center
            display inline-block
            padding 10px
            font-size 12px
            text-transform uppercase
            &:nth-child(0){
                padding-left 0px
            }
        }
        ul{
            display none
        }
    }
}

